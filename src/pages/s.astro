---
import '@src/main.css';
import Dropdown from '@src/components/DropDown.astro';
import { ShieldEllipsis, Palette, Info, Globe } from 'lucide-astro';
---

<!doctype html>
<html lang="en" class="h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Home</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script src="@src/utils/s.ts"></script>
  </head>
  <body class="flex h-screen">
    <div
      class="flex flex-col border-r-[3px] border-black border-solid w-44 h-full bg-background-overlay text-text-SECONDARY p-5"
    >
      <h2
        class="font-linux text-2xl text-text-HEADER text-center font-semibold mb-6"
      >
        Settings
      </h2>
      <div class="grow flex items-center">
        <ul id="menu" class="flex flex-col items-center space-y-2 w-full">
          <li
            data-section="site"
            class="font-semibold cursor-pointer w-full px-4 py-2 bg-background rounded-sm hover:bg-gray-700 text-center"
          >
            <div class="flex items-center">
              <Globe class="h-6 w-6 align-middle" />
              <span class="ml-2 align-middle">Site</span>
            </div>
          </li>
          <li
            data-section="proxy"
            class="font-semibold cursor-pointer w-full px-4 py-2 bg-background rounded-sm hover:bg-gray-700 text-center"
          >
            <div class="flex items-center">
              <ShieldEllipsis class="h-6 w-6 inline" />
              <span class="ml-2">Proxy</span>
            </div>
          </li>
          <li
            data-section="customization"
            class="font-semibold cursor-pointer w-full px-4 py-2 bg-background rounded-sm hover:bg-gray-700 text-center"
          >
            <div class="flex items-center">
              <Palette class="h-6 w-6 align-middle" />
              <span class="ml-2 align-middle">Styling</span>
            </div>
          </li>
          <li
            data-section="about"
            class="font-semibold cursor-pointer w-full px-4 py-2 bg-background rounded-sm hover:bg-gray-700 text-center"
          >
            <div class="flex items-center">
              <Info class="h-6 w-6 align-middle" />
              <span class="ml-2 align-middle">About</span>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div
      id="site"
      class="flex flex-col items-center justify-start min-h-screen w-[calc(100%-11rem)] content-section overflow-auto"
    >
      <div
        class="flex flex-col items-center justify-center p-6 bg-background-overlay rounded-lg shadow-md"
      >
        <h1 class="font-linux text-2xl text-text-HEADER font-bold mb-2">
          Leave Confirmation
        </h1>
        <p class="font-fit text-text-SECONDARY text-center">
          Enable a confirmation dialog when leaving the site.
        </p>
        <p
          id="lcstatus"
          class="font-fit mt-[10px] text-text-SECONDARY text-center"
        >
          Loading status...
        </p>
        <button
          id="confirm"
          class="px-4 py-2 mt-4 bg-background text-text-SECONDARY font-semibold rounded-lg shadow-sm hover:bg-gray-700 focus:outline-hidden focus:ring-2"
        >
          Toggle
        </button>
      </div>
      <br />
      <div
        class="flex flex-col items-center justify-center p-6 bg-background-overlay rounded-lg shadow-md"
      >
        <h1 class="font-linux text-2xl text-text-HEADER font-bold mb-2">Ads</h1>
        <p class="font-fit mt-[10px] text-text-SECONDARY text-center">
          Ads help support the site and keep it free. Please consider keeping
          this on.
        </p>
        <p
          id="adstatus"
          class="font-fit mt-[10px] text-text-SECONDARY text-center"
        >
          Loading Status...
        </p>
        <button
          id="adconfirm"
          class="px-4 py-2 mt-4 bg-background text-text-SECONDARY font-semibold rounded-lg shadow-sm hover:bg-gray-700 focus:outline-hidden focus:ring-2"
        >
          Toggle
        </button>
      </div>
      <br />
      <div
        class="flex flex-col items-center justify-center p-6 bg-background-overlay rounded-lg shadow-md"
      >
        <h1 class="text-2xl font-linux text-text-HEADER font-bold mb-2">
          About Blank
        </h1>
        <p class="font-fit text-text-SECONDARY text-center">
          Prevent the proxy from appearing in your search history.
        </p>
        <p
          id="abstatus"
          class="font-fit mt-[10px] text-text-SECONDARY text-center"
        >
          Loading status...
        </p>
        <div class="flex space-x-4 mt-4">
          <button
            id="ab"
            class="px-4 py-2 bg-background text-text-SECONDARY font-semibold rounded-lg shadow-sm hover:bg-gray-700 focus:outline-hidden focus:ring-2"
          >
            Toggle
          </button>
          <button
            id="openCloak"
            class="px-4 py-2 bg-background text-text-SECONDARY font-semibold rounded-lg shadow-sm hover:bg-gray-700 focus:outline-hidden focus:ring-2"
          >
            Open Cloak
          </button>
        </div>
      </div>
    </div>
    <div
      id="proxy"
      class="hidden flex flex-col items-center justify-center h-full w-[calc(100%-11rem)] content-section overflow-auto"
    >
      <div
        class="flex flex-col items-center justify-center p-6 bg-background-overlay rounded-lg shadow-md"
      >
        <h1 class="text-2xl font-linux text-text-HEADER font-bold mb-2">
          Proxy Type
        </h1>
        <p class="font-fit text-text-SECONDARY text-center">
          Choose a proxy that is used to search.
          <br /><br />
          <strong>Ultraviolet</strong> - Fast, but some sites may not work.
          <br />
          <strong>Scramjet (BETA)</strong> - Alot faster then UV, also more sites
          work then UV.
        </p>
        <br />
        <Dropdown
          id="ptype"
          options={[
            { value: 'sj', label: 'Scramjet' },
            { value: 'uv', label: 'Ultraviolet (default)' },
          ]}
        />
      </div>
      <br />
      <div
        class="flex flex-col items-center justify-center p-6 bg-background-overlay rounded-lg shadow-md"
      >
        <h1 class="font-linux text-2xl text-text-HEADER font-bold mb-2">
          Search Engine
        </h1>
        <p class="text-text-SECONDARY font-fit text-center">
          Choose a search engine to use.
        </p>
        <br />
        <Dropdown
          id="engine"
          options={[
            {
              value: 'https://www.google.com/search?q=',
              label: 'Google',
            },
            {
              value: 'https://duckduckgo.com/?q=',
              label: 'DuckDuckGo (Default)',
            },
          ]}
        />
      </div>
    </div>
    <div
      id="customization"
      class="flex flex-col items-center justify-center h-full w-[calc(100%-11rem)] content-section hidden"
    >
      <div
        class="flex flex-col items-center justify-center p-6 bg-background-overlay rounded-lg shadow-md"
      >
        <h1 class="font-linux text-2xl text-text-HEADER font-bold mb-2">
          Coming Soon.
        </h1>
      </div>
    </div>
    <div
      id="about"
      class="hidden flex flex-col items-center justify-center h-full p-6 w-[calc(100%-11rem)] content-section overflow-auto"
    >
      <div
        class="flex flex-col items-center justify-center p-8 bg-background-overlay rounded-lg shadow-md max-w-lg"
      >
        <h1
          class="font-linux text-2xl text-text-HEADER font-semibold mb-4 text-center"
        >
          About Thundr
        </h1>
        <p class="font-fit text-text-SECONDARY font-medium mb-2">
          Last Updated: {
            new Date(LAST_UPDATED).toLocaleString() || 'Failed to fetch.'
          }
        </p>
        <p class="font-fit text-text-SECONDARY font-medium mb-6">
          Version: v{VERSION}
        </p>
        <h1 class="font-fit text-2xl text-text-HEADER font-semibold mb-6">
          Socials
        </h1>
        <div class="flex flex-col items-center space-y-4">
          <a
            href="https://discord.gg/RzvJmf4W"
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-SECONDARY font-medium hover:underline flex items-center space-x-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M20.317 4.369c-1.885-1.36-3.925-1.88-5.99-2.11-.275.5-.52 1.02-.73 1.55a17.42 17.42 0 0 0-5.19 0c-.21-.53-.46-1.05-.73-1.55-2.065.23-4.105.75-5.99 2.11C.947 7.68.247 11.91.897 16.06c2.37 1.75 4.67 2.8 6.92 3.47.56-.76 1.05-1.56 1.45-2.4-.8-.3-1.57-.68-2.31-1.14.19-.14.38-.28.56-.43 4.48 2.1 9.34 2.1 13.82 0 .19.15.37.29.56.43-.74.46-1.51.84-2.31 1.14.4.84.89 1.64 1.45 2.4 2.25-.67 4.55-1.72 6.92-3.47.66-4.15-.04-8.38-3.12-11.69zm-12.067 9.28c-1.262 0-2.285-1.16-2.285-2.58 0-1.42 1.007-2.58 2.285-2.58 1.287 0 2.318 1.17 2.29 2.58.027 1.42-1.003 2.58-2.29 2.58zm7.5 0c-1.263 0-2.286-1.16-2.286-2.58 0-1.42 1.007-2.58 2.286-2.58 1.287 0 2.318 1.17 2.29 2.58.028 1.42-1.003 2.58-2.29 2.58z"
              ></path>
            </svg>
            <span>Discord</span>
          </a>
          <a
            href="https://github.com/Thundr-Proxy/Thundr-v1"
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-SECONDARY font-medium hover:underline flex items-center space-x-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M12 2C6.477 2 2 6.477 2 12c0 4.418 2.865 8.166 6.839 9.489.5.092.682-.217.682-.483 0-.237-.009-.868-.013-1.704-2.782.604-3.369-1.342-3.369-1.342-.455-1.157-1.11-1.465-1.11-1.465-.908-.621.069-.609.069-.609 1.003.07 1.532 1.031 1.532 1.031.892 1.53 2.341 1.088 2.91.832.091-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.945 0-1.092.39-1.984 1.029-2.683-.103-.253-.447-1.272.098-2.65 0 0 .84-.27 2.75 1.025A9.58 9.58 0 0 1 12 6.8c.851.004 1.706.115 2.504.336 1.909-1.296 2.747-1.025 2.747-1.025.546 1.378.202 2.397.099 2.65.64.7 1.028 1.591 1.028 2.683 0 3.845-2.339 4.687-4.566 4.935.36.31.682.922.682 1.857 0 1.34-.012 2.422-.012 2.75 0 .269.18.58.688.481C19.135 20.164 22 16.418 22 12c0-5.523-4.477-10-10-10z"
              ></path>
            </svg>
            <span>Github</span>
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
