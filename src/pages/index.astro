---
import '@src/main.css';
import { Image } from 'astro:assets';
import {
  ArrowLeft,
  ArrowRight,
  MoonStar,
  RotateCw,
  Ellipsis,
  Gamepad,
  Grid2X2Plus,
  Settings,
  Maximize,
  SquareChevronRight,
  Star,
  Link2,
} from 'lucide-astro';
---

<!doctype html>
<html lang="en" class="h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Home</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script is:inline src="/bm/index.js" defer></script>
    <script is:inline src="/assets/packaged/v/config.js" defer></script>
    <script is:inline src="/assets/packaged/v/bundle.js" defer></script>
    <link rel="prefetch" href="/assets/packaged/scram/worker.js" />
    <link rel="prefetch" href="/assets/packaged/scram/shared.js" />
    <script is:inline src="/assets/packaged/scram/controller.js" defer></script>
    <script src="@src/utils/main.ts"></script>
    <script src="@src/utils/search.ts"></script>
  </head>

  <body id="side" class="relative h-screen overflow-hidden">
    <div
      class="absolute border-r-[3px] border-black border-solid top-0 bg-background-overlay left-0 h-screen w-[62px] z-50 flex flex-col items-center pt-4"
    >
      <a href="./" id="moonStar">
        <MoonStar
          class="text-[#a5adce] hover:text-blue-400 w-8 h-8 mt-[6px] transition duration-150 transform hover:scale-110"
        />
      </a>
      <hr class="w-8 border-t-[2px] border-[#a5adce] my-4" />
      <div
        class="mb-[240px] flex-grow flex flex-col items-center justify-center space-y-4"
      >
        <div id="game">
          <Gamepad
            class="text-[#a5adce] hover:text-white w-8 h-8 transition duration-150 transform hover:scale-110"
          />
        </div>
        <div id="app">
          <Grid2X2Plus
            class="text-[#a5adce] hover:text-white w-8 h-8 transition duration-150 transform hover:scale-110"
          />
        </div>
        <div id="set">
          <Settings
            class="text-[#a5adce] hover:text-white w-8 h-8 transition duration-150 transform hover:scale-110"
          />
        </div>
      </div>
    </div>

    <div
      class="flex justify-between items-center bg-background-overlay p-4 rounded-lg space-x-4 z-30 ml-[62px]"
      id="navbar"
    >
      <div class="flex space-x-4">
        <a
          title="Forward"
          id="forward"
          class="relative group w-8 h-8 flex items-center justify-center"
        >
          <ArrowLeft
            alt="forward"
            class="text-[#a5adce] group-hover:text-white w-6 h-6 z-10 transition-transform duration-200 ease-in-out"
          />
          <div
            class="absolute inset-0 rounded-full bg-transparent group-hover:bg-white/20 transition-colors duration-200"
          >
          </div>
        </a>

        <a
          title="Back"
          id="back"
          class="relative group w-8 h-8 flex items-center justify-center"
        >
          <ArrowRight
            alt="back"
            class="text-[#a5adce] group-hover:text-white w-6 h-6 z-10 transition-transform duration-200 ease-in-out"
          />
          <div
            class="absolute inset-0 rounded-full bg-transparent group-hover:bg-white/20 transition-colors duration-200"
          >
          </div>
        </a>
        <a
          title="Refresh"
          id="reload"
          class="relative group w-8 h-8 flex items-center justify-center"
        >
          <RotateCw
            alt="refresh"
            class="text-[#a5adce] group-hover:animate-spin group-hover:text-white w-6 h-6 z-10 transition-transform duration-200 ease-in-out"
          />
          <div
            class="absolute inset-0 rounded-full bg-transparent group-hover:bg-white/20 transition-colors duration-200"
          >
          </div>
        </a>
      </div>
      <form method="post" class="flex-grow mx-4 relative" id="form">
        <div class="relative">
          <input
            autocomplete="off"
            id="input"
            type="text"
            placeholder="Search..."
            class="pl-14 py-2 pr-4 w-full rounded-full border border-[#a5adce] text-text-SECONDARY bg-transparent focus:outline-none focus:ring-2 focus:ring-[#a5adce]"
          />
          <Image
            src="/assets/images/engines/google.png"
            alt="Search Engine"
            width={25}
            id="favicon"
            height={26}
            class="rounded-full absolute left-3 top-1/2 transform -translate-y-1/2"
          />
        </div>
        <button
          type="button"
          id="link"
          class="absolute right-2 top-1/2 transform -translate-y-1/2 group w-8 h-8 flex items-center justify-center"
        >
          <Link2
            class="text-[#a5adce] group-hover:text-white w-6 h-6 z-10 transition-transform duration-200 ease-in-out"
          />
          <div
            class="absolute inset-0 rounded-full bg-transparent group-hover:bg-white/20 transition-colors duration-200"
          >
          </div>
        </button>
      </form>

      <button
        id="fav"
        class="relative group w-8 h-8 flex items-center justify-center"
      >
        <Star
          class="text-[#a5adce] group-hover:text-yellow-400 w-6 h-6 z-10 transition-transform duration-200 ease-in-out"
        />
        <div
          class="absolute inset-0 rounded-full bg-transparent group-hover:bg-white/20 transition-colors duration-200"
        >
        </div>
      </button>
      <button
        id="console"
        class="relative group w-8 h-8 flex items-center justify-center"
      >
        <SquareChevronRight
          class="text-[#a5adce] group-hover:text-white w-6 h-6 z-10 transition-transform duration-200 ease-in-out"
        />
        <div
          class="absolute inset-0 rounded-full bg-transparent group-hover:bg-white/20 transition-colors duration-200"
        >
        </div>
      </button>
      <button
        id="full-screen"
        class="relative group w-8 h-8 flex items-center justify-center"
      >
        <Maximize
          class="text-[#a5adce] group-hover:text-white w-6 h-6 z-10 transition-transform duration-200 ease-in-out"
        />
        <div
          class="absolute inset-0 rounded-full bg-transparent group-hover:bg-white/20 transition-colors duration-200"
        >
        </div>
      </button>
    </div>

    <div
      id="starting"
      class="text-center mt-10 p-4 rounded-lg space-x-4 z-30 relative ml-[56px]"
    >
      <h1 class="text-6xl ml-35 mt-52 text-text-HEADER font-bold">Lunar</h1>
      <p id="quote" class="text-mm mt-6 text-text-SECONDARY">
        Loading quote...
      </p>
      <form method="post" id="startForm">
        <div class="relative">
          <input
            type="text"
            id="startSearch"
            autocomplete="off"
            class="pl-10 text-center w-1/2 mt-10 bg-background-overlay text-text-SECONDARY p-2 rounded-full border border-[#a5adce] placeholder-white"
            placeholder="Search..."
          />
        </div>
      </form>
    </div>

    <div id="load" class="z-10 ml-16 relative hidden">
      <div class="flex justify-center items-center space-x-4 mt-[210px] mb-6">
        <Ellipsis class="w-24 h-24 text-[#a5adce] animate-bounce delay-150" />
      </div>
      <h1 class="text-center text-4xl font-bold mt-14 text-text-HEADER">
        Please wait while Lunar loads your content...
      </h1>
    </div>

    <iframe
      id="frame"
      loading="lazy"
      title=""
      class="fixed top-[64px] left-[62px] z-20 h-[calc(100vh-64px)] w-[calc(100%-62px)]"
    ></iframe>
    <script src="@src/utils/browse.ts"></script>
    <script src="@src/utils/home.ts"></script>
  </body>
</html>
